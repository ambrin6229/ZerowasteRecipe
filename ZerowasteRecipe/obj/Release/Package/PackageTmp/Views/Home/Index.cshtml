@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<head>

    <script type="text/javascript" src="~/Scripts/jquery-3.5.0.min.js"></script>
    <style>
        .scale img {
            margin: 0;
            /* Full height */
            height: auto;
            width: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: contain|cover;
        }

        .mySlides {
            display: none;
        }
    </style>

</head>
<body>

    <h2 class="w3-center"></h2>

    <div class="w3-content w3-display-container">
        <img class="mySlides" src="https://mockingbot.com/uploads2/images/69/695446/v2_q96kjc.jpg" style="width:100%; height=100%">
        <img class="mySlides" src="https://mockingbot.com/uploads2/images/69/695460/v2_q96m2t.jpg" style="width:100%">
        <img class="mySlides" src="https://mockingbot.com/uploads2/images/69/695553/v2_q96y5q.jpg" style="width:100%">


        <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
    </div>
    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex - 1].style.display = "block";
        }
    </script>
</body>
</html>
