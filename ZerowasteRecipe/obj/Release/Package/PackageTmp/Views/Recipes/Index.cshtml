@model IEnumerable<ZerowasteRecipe.Models.Recipe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/Recipe.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carbohydrate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Protien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fat)
        </th>
